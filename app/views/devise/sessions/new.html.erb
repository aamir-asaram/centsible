<div class="-mt-[12%] mb-[20%] flex items-center px-8">
  <a href="<%= users_path %>" class="text-white text-2xl font-semibold">
    <i class="fas fa-arrow-left"></i>
  </a>
  <h2 class="w-full flex justify-center text-white text-2xl font-light">Login</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full py-8"}) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full border-t h-[50px] outline-none focus:ring-0" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "w-full border-t h-[50px] outline-none focus:ring-0" %>
  </div>

  <div class="actions mt-[30%] w-full bg-green py-4 flex justify-center">
    <%= f.submit "Log In", class: "w-[96%] text-white border border-white h-[50px] py-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
