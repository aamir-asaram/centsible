<div class="-mt-[12%] mb-[15%] flex items-center px-8">
  <a href="<%= categories_path %>" class="text-white text-2xl font-semibold">
    <i class="fas fa-arrow-left"></i>
  </a>
  <h2 class="w-full flex justify-center text-white text-2xl font-light"><%= @category.name.upcase%></h2>
</div>

<h2 class="flex overflow-hidden px-8 py-3 shadow-lg justify-end">
  <span class="font-bold">Total: &nbsp</span>
  <span class="w-fit">R<%= number_with_precision(@category.total, precision: 2) %></span>
</h2>

<% @expenses.each do |expense| %>
  <div class="w-full shadow-lg p-4 my-4 grid grid-cols-5 items-center">
    <div class="col-span-4 flex items-center h-full">
      <h2 class="text-2xl font-semibold"><%= expense.name %></h2>
    </div>
    <h2 class="overflow-hidden text-right mr-6 col-span-1 w-fit">R<%= number_with_precision(expense.amount, precision: 2) %></h2>
  </div>
<% end %>

<div class="fixed bottom-0 right-0 bg-green w-full min-h-[70px] flex items-center justify-center">
  <%= link_to 'NEW EXPENSE', new_category_expense_path(category_id: @category), class: 'text-white text-center border border-white py-3 w-[96%]' %>
</div>
